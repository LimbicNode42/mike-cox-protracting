{
  "name": "mike-cox-protracting",
  "version": "0.1.0",
  "description": "MCP Server for Keycloak and Infisical integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mike-cox-protracting": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit --audit-level=high",
    "quality:check": "npm run lint && npm run format:check && npm run security:check",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "keycloak",
    "infisical",
    "auth",
    "secrets",
    "iam"
  ],
  "author": "LimbicNode42",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LimbicNode42/mike-cox-protracting.git"
  },
  "bugs": {
    "url": "https://github.com/LimbicNode42/mike-cox-protracting/issues"
  },
  "homepage": "https://github.com/LimbicNode42/mike-cox-protracting#readme"
}
