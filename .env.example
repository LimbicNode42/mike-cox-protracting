# Keycloak Configuration
# URL of your Keycloak instance
KEYCLOAK_URL=https://your-keycloak-instance.com

# Keycloak admin credentials
KEYCLOAK_USERNAME=admin
KEYCLOAK_PASSWORD=your-admin-password

# OPTIONAL: Keycloak realm and client configuration
# Keycloak realm (optional, defaults to 'master')
KEYCLOAK_REALM=master
# Keycloak client ID (optional, defaults to 'admin-cli')
KEYCLOAK_CLIENT_ID=admin-cli

# Infisical Configuration
# URL of your Infisical instance
INFISICAL_URL=https://your-infisical-instance.com

# NEW: Universal Auth (Recommended - Machine-to-Machine Authentication)
# Client ID and Secret from your Infisical Identity
INFISICAL_CLIENT_ID=your-client-id
INFISICAL_CLIENT_SECRET=your-client-secret

# DEPRECATED: API Token Authentication (Legacy Support Only)
# Only use this if you haven't migrated to Universal Auth yet
INFISICAL_TOKEN=your-api-token

# Static Configuration Defaults (Optional)
# These provide default values for resources and tools when parameters aren't specified
INFISICAL_ORG_ID=your-organization-id
INFISICAL_PROJECT_ID=your-default-project-id
INFISICAL_ENVIRONMENT_SLUG=prod

# Keycloak-Infisical Integration Configuration (Optional)
# Enable automatic storage of Keycloak secrets in Infisical
KEYCLOAK_INFISICAL_INTEGRATION_ENABLED=false

# Development Configuration (optional)
# Set to 'development' for dev mode, 'production' for prod
NODE_ENV=development

# Logging level (optional)
LOG_LEVEL=info
